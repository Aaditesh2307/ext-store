{
  "manifest_version": 3,
  "name": "Web Summary",
  "version": "1.0.0",
  "description": "Transform webpages into concise insights with AI-powered summarization",
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "features": [
      "Ai research",
      "page analysis",
      "fact checker"
    ],
    "default_popup": "popup.html",
    "default_title": "Web Summary"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 